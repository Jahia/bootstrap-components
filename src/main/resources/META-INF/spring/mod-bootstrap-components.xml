<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.jahia.services.content.decorator.JCRNodeDecoratorDefinition">
        <property name="decorators">
            <map>
                <entry key="jnt:bootstrapColumn" value="org.jahia.modules.bootstrap.decorators.BootstrapColumnDecorator"/>
            </map>
        </property>
    </bean>
    <bean id="Toolbar.Item.BootstrapSearchForm" class="org.jahia.services.uicomponents.bean.toolbar.Item">
        <property name="actionItem">
            <bean class="org.jahia.ajax.gwt.client.widget.toolbar.action.NewContentActionItem">
                <property name="nodeTypes" value="jnt:bootstrapMenuSimpleSearchForm"/>
                <property name="parentTypes" value="jnt:page"/>
            </bean>
        </property>
        <property name="titleKey" value="bootstrapComponents.new.bootstrapMenuSimpleSearchForm"/>
        <property name="icon" value="/modules/newsletter/icons/newNewsletter"/>
        <property name="parent" value="editmode.tabs[0].treeContextMenu"/>
        <property name="positionAfter" value="Toolbar.Item.NavMenuText"/>
    </bean>
    <bean id="Toolbar.Item.BootstrapLoginForm" class="org.jahia.services.uicomponents.bean.toolbar.Item">
        <property name="actionItem">
            <bean class="org.jahia.ajax.gwt.client.widget.toolbar.action.NewContentActionItem">
                <property name="nodeTypes" value="jnt:bootstrapMenuLoginForm"/>
                <property name="parentTypes" value="jnt:page"/>
            </bean>
        </property>
        <property name="titleKey" value="bootstrapComponents.new.bootstrapMenuLoginForm"/>
        <property name="icon" value="/modules/newsletter/icons/newNewsletter"/>
        <property name="parent" value="editmode.tabs[0].treeContextMenu"/>
        <property name="positionAfter" value="Toolbar.Item.BootstrapSearchForm"/>
    </bean>
</beans>
